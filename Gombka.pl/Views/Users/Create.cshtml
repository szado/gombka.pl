@namespace Gombka.pl.Models.Entities
@model UserEntity

@using (Html.BeginForm())
{
    <div class="form-group col-sm-4">
        <label asp-for="Login" class="control-label"></label>
        <input asp-for="Login" class="form-control" minlength="3" maxlength="16" required />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-4">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" minlength="8" maxlength="32" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" id="submit-login">Zarejestruj się</button>
}