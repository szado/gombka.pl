<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gombka.pl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/app.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Open+Sans:wght@300&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <a class="navbar-brand w-35" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/logo.png" title="Gombka.pl" class="img-fluid" />
                    </a>
                </div>
            </div>
            <div class="row bg-dark">
                <div class="col-12">
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
                        <div class="navbar-collapse collapse d-sm-inline-flex">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <form asp-action="Search" asp-controller="Videos" method="get" id="search-form">
                                        <input name="query" id="query-search" value="@Context.Request.Query["query"]" />
                                        <button id="search-btn" class="mt-1">🔍</button>
                                    </form>
                                </li>
                            </ul>
                            <ul class="navbar-nav flex-grow-1 justify-content-end">
                                <partial name="_LoginPartial" />
                            </ul>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div class="container bg-light pb-3">
        @RenderBody()
    </div>

    <footer class="bg-dark footer text-muted">
        <div class="container">
            &copy; 2021 - Gombka.pl</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
